<h1><%= @usuario.nome %> <%= @usuario.sobrenome %></h1>
    <% if !@usuario.avatar.file.nil? %>
      <%= image_tag @usuario.avatar.url, width: "200", height: "200" %>
      <% end %>
    <br>

    <p> Nome: </p><%= @usuario.nome %> </p>
    <br>
    <p> Sobrenome: </p><%= @usuario.sobrenome %> </p>
    <br>
    <p> email: </p><%= @usuario.email %> </p>
    <br>
    <p> telefone: </p><%= @usuario.telefone %> </p>
    <br>
    <p> Data de Nacismento: </p><%= @usuario.data_nascimento %> </p>
    <br>

    <%= link_to "Todos os usuarios", index_usuarios_path %>
    <%= link_to "Editar", edit_usuario_path(id: @usuario.id) %>
    <%= link_to "Excluir", destroy_usuario_path(id: @usuario.id),
    method: :delete, data: {confirm: "Tem certeza que deseja excluir o cadastro
      (todos os posts serão excluídos)?"} %>
